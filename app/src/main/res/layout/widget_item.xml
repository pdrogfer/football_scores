<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_item_layout">
<!-- TODO add rtl support -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_item_team_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="texto 1"
            android:contentDescription="home team name"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/widget_item_team_away"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="texto 2"
            android:contentDescription="away team name"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/widget_item_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="2 - 2"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:contentDescription="score"
        android:gravity="center"/>

</LinearLayout>